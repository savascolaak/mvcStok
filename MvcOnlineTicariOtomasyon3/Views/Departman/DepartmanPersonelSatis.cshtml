@using MvcOnlineTicariOtomasyon3.Models.Siniflar
@model List<SatisHareket>

@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Personel Satış</h2>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Personel Adı: @ViewBag.dp</li>
</ol>
<table class="table table-condensed">
    <tr>
       
        <th>Ürün</th>
        <th>Cari</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            
            <td>@item.Urun.UrunAd</td>
            <td>@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
            <td>@item.Fiyat ₺</td>
            <td>@item.Adet</td>
            <td>@item.ToplamTutar</td>
            <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
            <td><a href="#" class="btn btn-default"style="background-color:blue">Yazdır</a></td>
        </tr>


        
    }

</table>

