@model IEnumerable<MvcOnlineTicariOtomasyon3.Models.Siniflar.SinifGrup3>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün Mark Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0; }

                @foreach (var item in Model)
                {

                    <tr>
                        <td>@{sirano++; } @sirano</td>
                        <td>@item.marka</td>
                        <td>
                            @if (item.sayi >= 1 && item.sayi<=2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (item.sayi >= 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 55%"></div>
                                </div>
                            }
                            @if (item.sayi == 7)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 55%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (item.sayi >= 4 && item.sayi <= 6)
                            {
                                <span class="badge bg-danger"> @item.sayi </span>

                            }
                            @if (item.sayi >= 1 && item.sayi <= 3)
                            {
                                <span class="badge bg-warning"> @item.sayi </span>

                            }
                            @if (item.sayi >= 7)
                            {
                                <span class="badge bg-success"> @item.sayi </span>

                            }



                        </td>
                    </tr>

                }


            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>