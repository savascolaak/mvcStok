@using MvcOnlineTicariOtomasyon3.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Personel  Listesi</h2>
<br />
<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışları</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Personelid</td>
            <td>@item.PersonelAd</td>
            <td>@item.PersonelSoyad</td>
            <td><img src="@item.PersonelGorsel" style="width:100px; height:80px;" /></td>
            <td>@item.Departman.DepartmanAd</td>
           
            
           
            <td><a href="/Personel/PersonelGetir/@item.Personelid" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@item.Personelid" class="btn btn-default" style="background-color:lightcoral">Detaylar</a></td>
        </tr>
    }



</table>
<a href="/Personel/PersonelEkle/" class="btn btn-success">Personel Ekle</a>
