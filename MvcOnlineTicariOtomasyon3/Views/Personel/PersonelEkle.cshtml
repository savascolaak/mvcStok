@model MvcOnlineTicariOtomasyon3.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="~/Content/css/select2.css" rel="stylesheet" />
<br />
<h2>Yeni Personel Sayfası</h2>
<br />

<form class="form-group" method="post">

    @Html.LabelFor(x => x.PersonelAd)
    @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.PersonelSoyad)
    @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.PersonelGorsel)
    @*@Html.TextBoxFor(x => x.PersonelGorsel, new { @class = "form-control" })*@
    <input type="file" name="PersonelGorsel" />
    <br />

    @Html.LabelFor(x => x.Departman)
    @*@Html.TextBoxFor(x => x.Kategoriid, new { @class = "form-control" })*@
    <select class="Departman" style="width:1200px;" name="Departmanid">
    </select>
    @*@Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })*@
    <br />
    <br />
    <button class="btn btn-warning">Personel Ekle</button>

</form>
@section denemescript{
    <script src="~/Scripts/select2.min.js"></script>
    <script src="~/Scripts/bootstrap-select.min.js"></script>
    <link href="~/Scripts/bootstrap-select.min.css" rel="stylesheet" />
    <script src="~/Scripts/defaults-tr_TR.min.js"></script>
    <script src="~/Scripts/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".Departman").select2({
                language: "tr",
                placeholder: "Departman Seçiniz",
                theme: "classic",
                ajax: {
                    url: "/Personel/DepartmanListele",
                    dataType: "json",
                    data: function (params) {
                        return {
                            searchTerm: params.term
                        };
                    },
                    processResults: function (data, params) {
                        return {
                            results: data
                        };
                    }
                }
            });
        });
    </script>
}