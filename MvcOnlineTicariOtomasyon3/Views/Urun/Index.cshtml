<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün</th>
            <th>Marka</th>
            <th>Stok</th>
            <th>Alış Fiyat</th>
            <th>Satış Fiyat</th>
            <th>Kategori</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Satış Yap</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UrunAd</td>
            <td>@item.Marka</td>
            <td>@item.Stok</td>
            <td>@item.AlisFiyat ₺</td>
            <td>@item.SatisFiyat ₺</td>
            <td>@item.Kategori.KategoriAd</td>
            <td><a href="/Urun/UrunSil/@item.Urunid" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@item.Urunid" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Urun/SatisYap/@item.Urunid" class="btn btn-default" style="background-color:#0094ff">Satış Yap</a></td>
        </tr>
    }


</table>
